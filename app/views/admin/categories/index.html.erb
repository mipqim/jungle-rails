<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories</th>
          <th>Total Products</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category_in_product| %>
          <%= render 'category', name: category_in_product.name, id: category_in_product.id %>                
        <% end %>         
      </tbody>
    </table>

  </div>

</section>