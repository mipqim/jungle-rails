<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h4><%= humanized_money_with_symbol @order.total_cents%></h4>
    <h4><%= @order.email %></h4>
    <h4><%= @order.line_items.inspect() %></h4>    
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <%#= render 'item', product: item[:product], quantity: item[:quantity].to_i %-->



          <tr>
          <td>
            <%= image_tag line_item.product.image.tiny %>
          </td>
          <td>
            <h4><%= line_item.product.name %></h4>
            <br>
            <p><%= line_item.product.description %></p>
          </td>
          <td>
            <%= humanized_money_with_symbol line_item.product.price %>
          </td>
          <td>
            <%= line_item.quantity %>
          </td>
          <td>
            <%= humanized_money_with_symbol (line_item.product.price * line_item.quantity) %>
          </td>
        </tr>



        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol (cart_subtotal_cents / 100.0) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
